{# templates/panier/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block main %}
<div class="panier-page">
  <header class="panier-hero">
    <h1 class="panier-title">PANIER</h1>
  </header>

  <main class="panier-container">
    <section class="panier-card">
      <div class="panier-subtotal-label">Sous-total <span class="panier-subtotal-value">XX€</span></div>

      <div class="panier-items">
        <article class="panier-item">
          <div class="panier-item__name">Nom du service</div>
          <div class="panier-item__date">XX/XX/XX - XXXXX</div>

          <div class="panier-item__actions">
            <a class="panier-btn panier-btn--primary" href="#">Modifier</a>
            <a class="panier-btn panier-btn--outline" href="#">Retirer</a>
          </div>

          <div class="panier-item__price">XX€</div>
        </article>
      </div>

      <div class="panier-total">
        <div class="panier-total__label">Total</div>
        <div class="panier-total__value">XX€</div>
      </div>
    </section>
  </main>
</div>
{% endblock %}