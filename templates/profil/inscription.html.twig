{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block main %}
<section class="inscription-page">
  {# bandeau violet derrière le titre (comme ta maquette) #}
  <div class="services-top-band">
  <header class="services-hero">
    <h1 class="services-title">Inscription</h1>
    </header>
  </div>

  <div class="inscription-card">
    <form class="inscription-form" action="{{ path('app_profil_inscription') }}" method="post">

      <fieldset class="form-grid-2">
        <div class="form-field">
          <label for="firstname">Prénom</label>
          <input type="text" id="firstname" name="firstname" placeholder="Écrire ici...">
        </div>

        <div class="form-field">
          <label for="name">Nom</label>
          <input type="text" id="name" name="name" placeholder="Écrire ici...">
        </div>
      </fieldset>

      <fieldset class="form-grid-1">
        <div class="form-field">
          <label for="email">Votre mail</label>
          <input type="email" id="email" name="email" placeholder="Écrire ici...">
        </div>

        <div class="form-field">
          <label for="pseudo">Pseudonyme (pas de chiffres/nombres/caractères spéciaux)</label>
          <input type="text" id="pseudo" name="pseudo" placeholder="Écrire ici...">
        </div>

        <div class="form-field">
          <label for="password">Mot de passe</label>
          <input type="password" id="password" name="password" placeholder="Écrire ici...">
        </div>

        <div class="form-field">
          <label for="password_confirm">Confirmer le mot de passe</label>
          <input type="password" id="password_confirm" name="password_confirm" placeholder="Écrire ici...">
        </div>
      </fieldset>

      <section class="profil-section">
        <h2 class="section-title">Choix de la photo de profil</h2>

        <div class="profil-grid">
          {# IMPORTANT : ids uniques #}
          {% for i in 1..12 %}
            <div class="profil-choice">
              <input type="radio" id="photo_{{ i }}" name="photo_profil" value="{{ i }}">
              <label for="photo_{{ i }}" class="profil-label">
                <img src="{{ asset('images/profil_' ~ i ~ '.png') }}" alt="Photo de profil {{ i }}">
              </label>
            </div>
          {% endfor %}
        </div>

        <div class="profil-preview" aria-hidden="true"></div>
      </section>

      <fieldset class="form-grid-2 form-bottom">
        <div class="form-field form-age">
          <label for="age">Âge</label>
          <input type="number" id="age" name="age" placeholder="Votre âge">
        </div>

        <div class="form-field form-sexe">
          <legend>Sexe</legend>

          <div class="sexe-list">
            <div class="sexe-choice">
              <input type="radio" id="sexe_f" name="sexe" value="F">
              <label for="sexe_f">Femme</label>
            </div>

            <div class="sexe-choice">
              <input type="radio" id="sexe_h" name="sexe" value="M">
              <label for="sexe_h">Homme</label>
            </div>

            <div class="sexe-choice">
              <input type="radio" id="sexe_a" name="sexe" value="A">
              <label for="sexe_a">Autre</label>
            </div>
          </div>
        </div>
      </fieldset>

      <fieldset class="newsletter-field">
        <input type="checkbox" id="newsletter" name="newsletter" value="1">
        <label for="newsletter">Inscription à la newsletter (optionnel)</label>
      </fieldset>

      <button class="btn-inscription" type="submit">S'inscrire</button>
    </form>
  </div>
  <br>  <br>  <br>  <br>



  {# ===================== REASSURANCE (bandeau blanc) ===================== #}
  <section class="inscription-reassurance">
    <div class="reassurance-container">
      <div class="reassurance-item">
        <img class="reassurance-icon" src="{{ asset('images/Vector-3.png') }}" alt="">
        <p>Praticiens sélectionnés <br>avec soin.</p>
      </div>

      <div class="reassurance-item">
        <img class="reassurance-icon" src="{{ asset('images/Vector-1.png') }}" alt="">
        <p>Paiement sécurisé & 3x sans frais en France dès 60€.</p>
      </div>

      <div class="reassurance-item">
        <img class="reassurance-icon" src="{{ asset('images/Vector.png') }}" alt="">
        <p>Notre équipe vous accompagne et vous guide 24/24 en ligne.</p>
      </div>

      <div class="reassurance-item">
        <img class="reassurance-icon" src="{{ asset('images/Vector-2.png') }}" alt="">
        <p>Garantie incluse : <br>Satisfait ou 100% remboursé.</p>
      </div>
    </div>
  </section>
</section>

{% endblock %}
